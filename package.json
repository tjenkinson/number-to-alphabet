{
  "name": "number-to-alphabet",
  "version": "1.0.0",
  "description": "Simple library to convert a number to sequence of letters and vice versa.",
  "main": "dist/number-to-alphabet.js",
  "types": "dist/number-to-alphabet.d.ts",
  "scripts": {
    "dev": "parcel src/demo.html --global NumberToAlphabet",
    "build": "parcel build src/number-to-alphabet.ts --no-minify --global NumberToAlphabet && npm run types",
    "prettier": "prettier --write 'src/**/*.{ts,html}'",
    "types": "tsc --emitDeclarationOnly"
  },
  "hooks": {
    "pre-commit": "npm run prettier"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/tjenkinson/number-to-alphabet.git"
  },
  "keywords": [
    "alphabet",
    "number",
    "sequence",
    "numeric"
  ],
  "author": "Tom Jenkinson <tjcode@outlook.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/tjenkinson/number-to-alphabet/issues"
  },
  "homepage": "https://github.com/tjenkinson/number-to-alphabet#readme",
  "devDependencies": {
    "husky": "^3.0.4",
    "parcel-bundler": "^1.12.3",
    "prettier": "^1.18.2",
    "typescript": "^3.5.3"
  }
}
